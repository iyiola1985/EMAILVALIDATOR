{
  "info": {
    "name": "Email and Phone Validator API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Validate email and phone addresses (format + MX records)"
  },
  "item": [
    {
      "name": "Validate Email",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "YOUR_PRIVATE_KEY" },
          { "key": "x-rapidapi-key", "value": "YOUR_RAPIDAPI_KEY" }
        ],
        "body": { "mode": "raw", "raw": "{ \"email\": \"test@gmail.com\" }" },
        "url": {
          "raw": "https://emailvalidator-livid.vercel.app/api/validate-email",
          "protocol": "https",
          "host": ["emailvalidator-livid", "vercel", "app"],
          "path": ["api", "validate-email"]
        }
      },
      "response": []
    },
    {
      "name": "Validate Phone",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "x-api-key", "value": "YOUR_PRIVATE_KEY" },
          { "key": "x-rapidapi-key", "value": "YOUR_RAPIDAPI_KEY" }
        ],
        "body": { "mode": "raw", "raw": "{ \"phone\": \"+2348123456789\" }" },
        "url": {
          "raw": "https://emailvalidator-livid.vercel.app/api/validate-phone",
          "protocol": "https",
          "host": ["emailvalidator-livid", "vercel", "app"],
          "path": ["api", "validate-phone"]
        }
      },
      "response": []
    }
  ]
}
